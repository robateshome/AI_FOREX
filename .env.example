# Environment Configuration for Forex Trading Bot
# Module 0x06: Docker Deployment Environment Variables
# CRC32: PLACEHOLDER_CRC32_06_ENV

# Application Configuration
APP_NAME=Forex Trading Bot
APP_VERSION=1.0.0
APP_ENV=production
DEBUG=false

# API Configuration
TWELVE_DATA_API_KEY=your_twelve_data_api_key_here
API_RATE_LIMIT=100
API_TIMEOUT=30

# Database Configuration
DATABASE_TYPE=postgresql
DATABASE_HOST=database
DATABASE_PORT=5432
DATABASE_NAME=forex_bot
DATABASE_USER=forex_user
DATABASE_PASSWORD=forex_password_secure
DATABASE_URL=postgresql://forex_user:forex_password_secure@database:5432/forex_bot

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_secure
REDIS_DB=0

# Security Configuration
SECRET_KEY=your_secret_key_here_change_in_production
ENCRYPTION_KEY=your_encryption_key_here_change_in_production
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRATION=3600

# Trading Configuration
TRADING_ENABLED=false
AUTO_EXECUTION=false
MAX_POSITION_SIZE=10000
RISK_PERCENTAGE=2.0
STOP_LOSS_PERCENTAGE=1.0
TAKE_PROFIT_PERCENTAGE=2.0

# Divergence Detection Configuration
CONFIDENCE_THRESHOLD=0.7
LOOKBACK_PERIOD=20
MIN_SWING_DISTANCE=0.001
INDICATOR_WEIGHTS_RSI=0.3
INDICATOR_WEIGHTS_MACD=0.25
INDICATOR_WEIGHTS_STOCH=0.25
INDICATOR_WEIGHTS_CCI=0.2

# Data Feed Configuration
UPDATE_INTERVAL=1
SYMBOLS=EUR/USD,GBP/USD,USD/JPY,USD/CHF,AUD/USD
PRIMARY_DATA_SOURCE=twelve_data
FALLBACK_ENABLED=true
WEBSOCKET_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/forex_bot.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Monitoring Configuration
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
HEALTH_CHECK_INTERVAL=30

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100
WS_MESSAGE_QUEUE_SIZE=1000

# Failsafe Configuration
FAILSAFE_ENABLED=true
EMERGENCY_SHUTDOWN_ENABLED=false
TRADE_LOCK_THRESHOLD=5
ALERT_RETENTION_HOURS=24

# Performance Configuration
WORKER_PROCESSES=4
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
KEEPALIVE_TIMEOUT=65

# External Services
TWELVE_DATA_BASE_URL=https://api.twelvedata.com
TWELVE_DATA_WEBSOCKET_URL=wss://ws.twelvedata.com
FALLBACK_API_URL=https://api.fallback.com

# Development Configuration (set to false in production)
DEV_MODE=false
MOCK_DATA_ENABLED=false
SIMULATION_MODE=false