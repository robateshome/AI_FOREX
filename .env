# AI Forex Signal Generator Environment Configuration
# Copy this file to .env and fill in your actual values

# Twelve Data API Configuration
# Get your API key from: https://twelvedata.com/
TWELVE_DATA_API_KEY=e5734060be9248d49d6624a056c601be

# Telegram Bot Configuration (Optional)
# Create a bot with @BotFather and get the token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=production
DEBUG=false

# Model Configuration
MODEL_PATH=models/forex_lstm.h5
SEQUENCE_LENGTH=60
FEATURE_WINDOW=15
MIN_CONFIDENCE=0.6
MIN_CONSECUTIVE_SIGNALS=2

# Trading Configuration
SYMBOLS=EUR/USD,GBP/USD,USD/JPY
UPDATE_INTERVAL=1.0
SIGNAL_COOLDOWN=60

# Performance Configuration
BACKTEST_INITIAL_CAPITAL=10000
POSITION_SIZE_PERCENT=1.0
TRANSACTION_COST_PERCENT=0.1

# Data Configuration
HISTORICAL_DATA_SIZE=2000
MIN_DATA_POINTS=100
DATA_RETENTION_HOURS=24

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=*
RATE_LIMIT_PER_MINUTE=800
RATE_LIMIT_PER_SECOND=8

# Security Configuration
SECRET_KEY=your_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Monitoring Configuration
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30
METRICS_RETENTION_DAYS=30

# Logging Configuration
LOG_FILE=logs/ai_forex_signals.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5